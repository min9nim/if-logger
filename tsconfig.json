{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "importHelpers": false, // require `tslib`
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "types": [
      "mocha",
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}